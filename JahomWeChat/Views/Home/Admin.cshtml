
@{
    ViewBag.Title = "Admin";
}

<script src="~/Content/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    CKEDITOR.replace('TextArea1');
</script>

<form class="form-horizontal" role="form" method="post" action="AddRecordByAdmin">
    <div class="form-group">
        <label for="Title" class="col-sm-2 control-label">标题</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Title" name="Title"
                   placeholder="标题" required>
        </div>
    </div>
    <div class="form-group">
        <label for="Tips" class="col-sm-2 control-label">标签</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Tips" name="Tips"
                   placeholder="标签 请按空格分开">
        </div>
    </div>
    <div class="form-group">
        <select name="IsSpecial">
            <option value="0">普通</option>
            <option value="1">特殊</option>
        </select>
    </div>
    <div class="form-group">
        <label for="TextArea1" class="col-sm-2 control-label">内容</label>
        <div class="col-sm-10">
            <textarea id="TextArea1" cols="20" rows="2" class="ckeditor" name="Content"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div>
            <center><input type="submit" class="form-control" /></center>
        </div>
    </div>
</form>

